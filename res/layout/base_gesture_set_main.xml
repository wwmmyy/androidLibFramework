<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:background="@drawable/base_login_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical">
    <ImageView 
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/logo"/>
     <TextView
        android:id="@+id/login_toast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:text="iPortal"
        android:gravity="center" />
     
    <TextView
        android:visibility="invisible"
         android:layout_marginTop="10dp"
        android:id="@+id/gesture_set_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#FF2525"
        android:textSize="16sp" />
    
    <com.dist.iprocess.view.BaseGestureLockView 
        android:id="@+id/gestureLockView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/> 
    <RelativeLayout 
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_width="fill_parent"
        
        android:layout_height="wrap_content">
        <TextView 
            android:id="@+id/save_gesture"
            android:textSize="17dp"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="20dp"
             android:visibility="gone"
               android:layout_alignParentLeft="true"
            android:text="保存手势"/>
        
         <TextView 
             android:id="@+id/login_by_text"
             android:textSize="17dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
          android:layout_alignParentRight="true"
             android:textColor="@android:color/white"
            android:text="登录其他账号"/>
    </RelativeLayout>
</LinearLayout>