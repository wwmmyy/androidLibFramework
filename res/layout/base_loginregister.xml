<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2C3137"
    android:orientation="vertical"
    android:paddingLeft="45dp"
    android:paddingRight="45dp" >

    <ImageView
        android:layout_width="48dp"
        android:layout_height="64dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:src="@drawable/base_lock" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="35dip"
        android:gravity="center_vertical"
        android:text="你的设备需要申请才能使用"
        android:textColor="#9B9EA5"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/device_re_remark"
        android:layout_width="fill_parent"
        android:layout_height="35dip"
        android:layout_marginTop="25dip"
        android:background="@drawable/bg_edt_white"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:hint=" 请输入授权码或申请说明"
        android:maxLength="30"
        android:paddingRight="2dp"
        android:singleLine="true"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#9B9EA5"
        android:textColorHighlight="#7e4d84"
        android:textSize="15dp" />

    <Button
        android:id="@+id/device_re_submit"
        android:layout_width="fill_parent"
        android:layout_height="38dip"
        android:layout_gravity="center"
        android:layout_marginTop="45dip"
        android:background="@drawable/base_register_bg"
        android:gravity="center"
        android:text="提  交"
        android:textColor="@color/white"
        android:textSize="22dp" />

</LinearLayout>