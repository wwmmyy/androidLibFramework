<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/title_bar_style" 
     android:id="@+id/base_top">
  
    <TextView
        android:id="@+id/base_top_title"
        style="@style/title_text_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/app_name" />
 
    
    <TextView
           android:id="@+id/base_top_back"
            android:layout_width="100dp"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="2dp" 
            android:clickable="true"
            android:paddingLeft="2dip" 
            android:drawablePadding="2dp"
            android:text="返回"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/back_a"  
            android:visibility="gone"/> 
    
        <TextView
        android:id="@+id/base_top_right_tx"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="-8dp"
        android:gravity="center"
        android:text="ssss"   
        android:visibility="gone"
        android:textSize="20sp"
        android:textColor="@color/white"/> 
        

    <ImageView
        android:id="@+id/base_top_right_im"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true" 
        android:layout_marginRight="12dp"  
        android:visibility="gone"
        android:background="@drawable/ppt"
        />
