<ScrollView xmlns:android = "http://schemas.android.com/apk/res/android"
            android:layout_width = "match_parent"
            android:background="@color/md_white_1000"
            android:layout_height = "match_parent"
            android:orientation = "vertical">

    <LinearLayout
            android:layout_width = "match_parent"
            android:layout_height = "match_parent"
            android:orientation = "vertical">

        <TextView
                android:id="@+id/info"
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"/>
        
        <ImageView
                android:id="@+id/img"
                android:layout_width = "200dp"
                android:layout_height = "300dp"/>


        <Button
                android:id="@+id/getScreenWidth"
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:text = "获得屏幕宽度"/>

        <Button
                android:id="@+id/getScreenHeight"
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:text = "获得屏幕高度"/>

        <Button
                android:id="@+id/getStatusHeight"
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:text = "获得状态栏高度"/>

        <Button
                android:id="@+id/snapShotWithStatusBar"
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:text = "获取当前屏幕截图，包含状态栏"/>

        <Button
                android:id="@+id/snapShotWithoutStatusBar"
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:text = "获取当前屏幕截图，不包含状态栏"/>

        <Button
                android:id="@+id/getScreenPhysicalSize"
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:text = "精确获取屏幕尺寸（例如：4.0寸屏幕）"/>

        <Button
                android:id="@+id/isTablet"
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:text = "是否是平板"/>

    </LinearLayout>


</ScrollView>
